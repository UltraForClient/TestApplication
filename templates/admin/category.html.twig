{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <p>
            <a href="{{ path('faq-category-admin-new') }}" class="btn btn-success">Add new FAQ</a>
        </p>
        <table>
            <thead>
            <tr class="text-center">
                <td>Id</td>
                <td>Question</td>
                <td colspan="2">Action</td>
            </tr>
            </thead>
            <tbody>
            {% for faqCategory in faqCategories %}
                <tr>
                    <td>{{ faqCategory.id }}</td>
                    <td>{{ faqCategory.name }}</td>
                    <td>
                        <a href="#" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <button class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block js %}
<script>
    $( "tbody" ).sortable();
</script>
{% endblock %}
