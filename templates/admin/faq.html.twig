{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <p>
            <a href="{{ path('faq-new') }}" class="btn btn-success">Add new FAQ</a>
        </p>
        <table class="table table-striped sortable">
            <thead>
            <tr class="text-center">
                <td>Id</td>
                <td>Question</td>
                <td>Enabled</td>
                <td colspan="2">Action</td>
            </tr>
            </thead>
            <tbody class="sortable">
            {% for faq in faqs %}
                <tr>
                    <td>{{ faq.id }}</td>
                    <td>{{ faq.question }}</td>
                    <td><input type="checkbox" checked data-toggle="toggle" data-onstyle="success" data-offstyle="danger"></td>
                    <td>
                        <a href="{{ path('faq-edit', {'id': faq.id}) }}" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <button class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block js %}
<script>
    $('.sortable').sortable({
        change(event, ui) {
            const id = ui.item[0].firstElementChild.textContent;
            const position = ui.placeholder.index();
            const url = 'http://127.0.0.1:8000/admin/faq/change-position/' + id + '/' + position;

            const fd = new FormData();

            const req =  new Request(url, {
                method:      'POST',
                body:        fd,
                mode:        'cors',
                credentials: 'include'
            });

            fetch(req)
                .then(response => response.json())
                .then(result   => result)
                .catch(error   => console.error(error))
            ;
        }
    });

    $('.sortable a').enableSelection();
</script>
{% endblock %}
