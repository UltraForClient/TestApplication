{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <ul class="list-group">
            <li class="list-group-item active">User data</li>
            <li class="list-group-item"><span class="text-info">Full name:</span> {{ user.name }} {{ user.surname }}</li>
            <li class="list-group-item"><span class="text-info">Email:</span> {{ user.email }}</li>
            <li class="list-group-item"><span class="text-info">Username:</span> {{ user.username }}</li>
        </ul>
        <br>
        <a href="{{ path('profile-edit', {'id': user.id}) }}" class="btn btn-primary">Edit data</a>
    </div>
{% endblock %}
