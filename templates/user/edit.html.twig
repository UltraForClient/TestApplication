{% extends 'base.html.twig' %}

{% block body %}
    <div class="row justify-content-md-center">
        <div class="col col-lg-6">
            {{ form_start(form, {'action': path('profile-edit'), 'method': 'post'}) }}
            <div class="form-group">
                {{ form_label(form.username, 'Username') }}
                {{ form_widget(form.username, { 'attr': {
                    'placeholder': 'Username',
                }}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.name, 'Name') }}
                {{ form_widget(form.name, { 'attr': {
                    'placeholder': 'Name',
                }}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.surname, 'Surname') }}
                {{ form_widget(form.surname, { 'attr': {
                    'placeholder': 'Surname'
                }}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email, 'E-mail') }}
                {{ form_widget(form.email, { 'attr': {
                    'placeholder': 'E-mail'
                }}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.imageFile, 'Avatar') }}
                {{ form_widget(form.imageFile, { 'attr': {
                    'placeholder': 'Avatar'
                }}) }}
            </div>
            <button type="submit" class="btn btn-success">Save</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
