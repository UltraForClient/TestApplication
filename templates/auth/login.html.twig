{% extends 'base.html.twig' %}

{% block body %}
<div class="row justify-content-md-center">
    <div class="col col-lg-6">
        {% if error %}
            <div class="error error-login">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="POST">
            <div class="form-group">
                <label for="username">E-mail</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="E-mail">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" id="password" name="_password" placeholder="password">
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="sing-in" title="Zaloguj siÄ™">Zaloguj</button>
        </form>
    </div>
</div>
{% endblock %}
